<%- include("partials/header.ejs") %>

    <main>
        <div class="w-border sidebar-right">
            <div id="blog-container" class="py-2">
                <div id="blog-header" class="flex space-between align-center pb-1 mb-1">
                    <h1 class="single-blog-title"><%= single.title %> </h1>
                </div>
                <div id="single-blog" class="pt-1">
                    <div class="single-blog-content">
                        <div class="single-blog-image mb-2" style="background-image: url('/images/blogs/<%= single.image %>');"></div>
                        <div class="single-blog-excerpt">
                            <%- single.content %>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div id="sidebar" class="py-2">
                <% if(!(blogID == 0 || blogID == 1)){ %>
                    <a href="/blogs/view/edit-post/<%= blogID %>" class="btn btn-warning mb-1 w-12">Edit post</a>
                <% } %>
                <a href="/blogs/create-post" class="btn btn-info mb-1 w-12">Create new post </a>
                <div id="categories" class="pt-1 pb-1">
                    <h4>Categories</h4>
                    <ul>
                        <li class="list-item"><a href="#">Travel</a></li>
                        <li class="list-item"><a href="#">Lifestyle</a></li>
                        <li class="list-item"><a href="#">Food and Clothing</a></li>
                        <li class="list-item"><a href="#">Technology</a></li>
                        <li class="list-item"><a href="#">Personal Development</a></li>
                        <li class="list-item"><a href="#">Parenting</a></li>
                        <li class="list-item"><a href="#">Finance</a></li>
                    </ul>
                </div>

                <div id="viewed" class="pt-1">
                    <h4>Recently viewed</h4>
                    <ul>
                        <li class="list-item"><a href="#">Blog title</a></li>
                        <li class="list-item"><a href="#">Blog title</a></li>
                        <li class="list-item"><a href="#">Blog title</a></li>
                        <li class="list-item"><a href="#">Blog title</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
<%- include("./partials/footer.ejs") %>